@model Agent

<div class="row d-flex justify-content-center ">
    <form asp-action="RegisterAgentForm" class="glass-effect-login col-8" enctype="multipart/form-data">

        <div class="d-flex justify-content-between">
            @* First Name *@
            <div class=" w-48">
                <div class="login-and-register-form-inputs">
                    <input asp-for="Name" required="" class="form-control w-100 shadow-sm" id="FirstName"
                        placeholder="Enter First Name">
                    <label>
                        <span style="transition-delay:0ms">E</span>
                        <span style="transition-delay:50ms">n</span>
                        <span style="transition-delay:100ms">t</span>
                        <span style="transition-delay:150ms">e</span>
                        <span style="transition-delay:200ms">r</span>
                        <span style="transition-delay:250ms"></span>
                        <span style="transition-delay:250ms">F</span>
                        <span style="transition-delay:300ms">i</span>
                        <span style="transition-delay:350ms">r</span>
                        <span style="transition-delay:400ms">s</span>
                        <span style="transition-delay:450ms">t</span>
                        <span style="transition-delay:500ms"></span>
                        <span style="transition-delay:500ms">N</span>
                        <span style="transition-delay:550ms">a</span>
                        <span style="transition-delay:600ms">m</span>
                        <span style="transition-delay:650ms">e</span>
                    </label>
                </div>
                <span class="d-flex justify-content-start">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </span>
            </div>

            @* Last Name *@
            <div class=" w-48">
                <div class="login-and-register-form-inputs">
                    <input asp-for="LastName" required="" class="form-control w-100 shadow-sm" id="LastName"
                        placeholder="Enter Last Name">
                    <label>
                        <span style="transition-delay:0ms">E</span>
                        <span style="transition-delay:50ms">n</span>
                        <span style="transition-delay:100ms">t</span>
                        <span style="transition-delay:150ms">e</span>
                        <span style="transition-delay:200ms">r</span>
                        <span style="transition-delay:250ms"></span>
                        <span style="transition-delay:250ms">L</span>
                        <span style="transition-delay:300ms">a</span>
                        <span style="transition-delay:350ms">s</span>
                        <span style="transition-delay:400ms">t</span>
                        <span style="transition-delay:450ms"></span>
                        <span style="transition-delay:450ms">N</span>
                        <span style="transition-delay:500ms">a</span>
                        <span style="transition-delay:550ms">m</span>
                        <span style="transition-delay:600ms">e</span>
                    </label>
                </div>
                <span class="d-flex justify-content-start">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </span>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <div class="w-55">

                <div>
                    <div class="login-and-register-form-inputs">
                        <input asp-for="Phone" required class="form-control w-100 shadow-sm" id="PropertyName"
                            placeholder="Property Name">
                        <label>
                            <span style="transition-delay:0ms">P</span>
                            <span style="transition-delay:50ms">h</span>
                            <span style="transition-delay:100ms">o</span>
                            <span style="transition-delay:150ms">n</span>
                            <span style="transition-delay:200ms">e</span>
                        </label>
                    </div>
                    <span class="d-flex justify-content-start">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </span>
                </div>

                <!-- Location -->
                <div>
                    <div class="login-and-register-form-inputs">
                        <input asp-for="Address" required class="form-control w-100 shadow-sm" id="Location"
                            placeholder="Location">
                        <label>
                            <span style="transition-delay:0ms">A</span>
                            <span style="transition-delay:50ms">d</span>
                            <span style="transition-delay:100ms">d</span>
                            <span style="transition-delay:150ms">r</span>
                            <span style="transition-delay:200ms">e</span>
                            <span style="transition-delay:250ms">s</span>
                            <span style="transition-delay:300ms">s</span>
                        </label>
                    </div>
                    <span class="d-flex justify-content-start">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </span>
                </div>

                <!-- Price -->
                <div>
                    <div class="login-and-register-form-inputs">
                        <input asp-for="Bio" required class="form-control w-100 shadow-sm" id="Price"
                            placeholder="Price">
                        <label>
                            <span style="transition-delay:0ms">B</span>
                            <span style="transition-delay:50ms">i</span>
                            <span style="transition-delay:100ms">o</span>
                        </label>
                    </div>
                    <span class="d-flex justify-content-start">
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </span>
                </div>
            </div>
