        </div>

        <div class="d-flex justify-content-between">
            <!-- Category -->
            <div class="w-48">
                <div class="Property-form-selects">
                    <select class="form-control w-100 shadow-sm" id="CategoryId" name="CategoryId" asp-for="CategoryId" required>
                        <option value="" disabled selected hidden></option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.CategoryId">@category.Name</option>
                        }
                    </select>
                    <label for="CategoryId">
                        <span style="transition-delay:0ms">C</span>
                        <span style="transition-delay:50ms">a</span>
                        <span style="transition-delay:100ms">t</span>
                        <span style="transition-delay:150ms">e</span>
                        <span style="transition-delay:200ms">g</span>
                        <span style="transition-delay:250ms">o</span>
                        <span style="transition-delay:300ms">r</span>
                        <span style="transition-delay:350ms">i</span>
                        <span style="transition-delay:400ms">e</span>
                    </label>
                </div>
                <span class="d-flex justify-content-start">
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </span>
            </div>
            <!-- Property Type -->
            <div class="w-48">
                <div class="Property-form-selects">
                    <select class="form-control w-100 shadow-sm" id="PropertyTypeId" name="PropertyTypeId" asp-for="PropertyTypeId" required>
                        <option value="" disabled selected hidden></option>
                        @foreach (var type in ViewBag.PropertyType)
                        {
                            <option value="@type.PropertyTypeId">@type.TypeOfproperty</option>
                        }
                    </select>
                    <label for="PropertyTypeId">
                        <span style="transition-delay:0ms">P</span>
                        <span style="transition-delay:50ms">r</span>
                        <span style="transition-delay:100ms">o</span>
                        <span style="transition-delay:150ms">p</span>
                        <span style="transition-delay:200ms">e</span>
                        <span style="transition-delay:250ms">r</span>
                        <span style="transition-delay:300ms">t</span>
                        <span style="transition-delay:350ms">y</span>
                        <span style="transition-delay:400ms"></span>
                        <span style="transition-delay:400ms">T</span>
                        <span style="transition-delay:450ms">y</span>
                        <span style="transition-delay:500ms">p</span>
                        <span style="transition-delay:550ms">e</span>
                    </label>
                </div>
                <span class="d-flex justify-content-start">
                    <span asp-validation-for="PropertyTypeId" class="text-danger"></span>
                </span>
            </div>
        </div>

        <!-- Checkboxes -->
        <div class="d-flex justify-content-between mt-40px">
            <!-- Garage -->
            <div>
                <label asp-for="Garages" class="cyberpunk-checkbox-label">
                    <input asp-for="Garages" type="checkbox" class="cyberpunk-checkbox">
                    Garage</label>
            </div>
            <!-- Pool -->
            <div>
                <label asp-for="Pool" class="cyberpunk-checkbox-label">
                    <input asp-for="Pool" type="checkbox" class="cyberpunk-checkbox">
                    Pool</label>
            </div>
            <!-- Garden -->
            <div>
                <label asp-for="Garden" class="cyberpunk-checkbox-label">
                    <input asp-for="Garden" type="checkbox" class="cyberpunk-checkbox">
                    Garden</label>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <!-- Squaremetres -->
            <div class="w-20">
                <div class="login-and-register-form-inputs">
                    <input asp-for="Squaremetres" required class="form-control w-100 shadow-sm" id="Squaremetres" placeholder="Squaremetres">
                    <label>
                        <span style="transition-delay:0ms">S</span>
                        <span style="transition-delay:50ms">q</span>
                        <span style="transition-delay:100ms">u</span>
                        <span style="transition-delay:150ms">a</span>
                        <span style="transition-delay:200ms">r</span>
                        <span style="transition-delay:250ms">e</span>
                        <span style="transition-delay:300ms">m</span>
                        <span style="transition-delay:350ms">e</span>
                        <span style="transition-delay:400ms">t</span>
                        <span style="transition-delay:450ms">r</span>
                        <span style="transition-delay:500ms">e</span>
                        <span style="transition-delay:550ms">s</span>
                    </label>
                </div>
                <span class="d-flex justify-content-start">
                    <span asp-validation-for="Squaremetres" class="text-danger"></span>
                </span>
            </div>
            <!-- Bedrooms -->
            <div class="w-20">
                <div class="login-and-register-form-inputs">
                    <input asp-for="Bedrooms" required class="form-control w-100 shadow-sm" id="Bedrooms" placeholder="Bedrooms">
                    <label>
                        <span style="transition-delay:0ms">B</span>
                        <span style="transition-delay:50ms">a</span>
                        <span style="transition-delay:100ms">d</span>
                        <span style="transition-delay:150ms">r</span>
                        <span style="transition-delay:200ms">o</span>
                        <span style="transition-delay:250ms">o</span>
                        <span style="transition-delay:300ms">m</span>
                        <span style="transition-delay:350ms">s</span>
                    </label>
                </div>
                <span class="d-flex justify-content-start">
                    <span asp-validation-for="Bedrooms" class="text-danger"></span>
                </span>
            </div>

            <!-- Bathrooms -->
            <div class="w-20">
                <div class="login-and-register-form-inputs">
                    <input asp-for="Bathrooms" required class="form-control w-100 shadow-sm" id="Bathrooms" placeholder="Bathrooms">
                    <label>
                        <span style="transition-delay:0ms">B</span>
                        <span style="transition-delay:50ms">a</span>
                        <span style="transition-delay:100ms">t</span>
                        <span style="transition-delay:150ms">h</span>
                        <span style="transition-delay:200ms">r</span>
                        <span style="transition-delay:250ms">o</span>
                        <span style="transition-delay:300ms">o</span>
                        <span style="transition-delay:350ms">m</span>
                        <span style="transition-delay:400ms">s</span>
                    </label>
                </div>
                <span class="d-flex justify-content-start">
                    <span asp-validation-for="Bathrooms" class="text-danger"></span>
                </span>
            </div>

            <!-- Rooms -->
            <div class="w-20">
                <div class="login-and-register-form-inputs">
                    <input asp-for="Rooms" required class="form-control w-100 shadow-sm" id="Rooms" placeholder="Rooms">
                    <label>
                        <span style="transition-delay:0ms">A</span>
                        <span style="transition-delay:50ms">l</span>
                        <span style="transition-delay:100ms">l</span>
                        <span style="transition-delay:150ms"></span>
                        <span style="transition-delay:150ms">R</span>
                        <span style="transition-delay:200ms">o</span>
                        <span style="transition-delay:250ms">o</span>
                        <span style="transition-delay:300ms">m</span>
                        <span style="transition-delay:350ms">s</span>
                    </label>
                </div>
                <span class="d-flex justify-content-start">
                    <span asp-validation-for="Rooms" class="text-danger"></span>
                </span>
            </div>
        </div>

        <!-- Description -->
        <div class="mt-40px">
            <div class="textarea-style">
                <textarea asp-for="Description" placeholder="Description" required class="form-control w-100 shadow-sm" id="Description"></textarea>
                <label>
                    <span style="transition-delay:0ms">D</span>
                    <span style="transition-delay:50ms">e</span>
                    <span style="transition-delay:100ms">s</span>
                    <span style="transition-delay:150ms">c</span>
                    <span style="transition-delay:200ms">r</span>
                    <span style="transition-delay:250ms">i</span>
                    <span style="transition-delay:300ms">p</span>
                    <span style="transition-delay:350ms">t</span>
                    <span style="transition-delay:400ms">i</span>
                    <span style="transition-delay:450ms">o</span>
                    <span style="transition-delay:500ms">n</span>
                </label>
            </div>
            <span class="d-flex justify-content-start">
                <span asp-validation-for="Description" class="text-danger"></span>
            </span>
        </div>

        <!-- Submit Button -->
        <div class="d-flex justify-content-center mt-4">
            <input type="submit" value="Upload" class="login-button">
        </div>
    </form>
</div>
