@model Property

@{
    ViewData["Title"] = "Edit Property";
}


<div class="row d-flex justify-content-center margin-to-125">
    <form class="glass-effect-login col-8" asp-action="UpdateProperty" asp-route-id="@Model.PropertyId" enctype="multipart/form-data">

        <div class="d-flex justify-content-between">
            <div class="w-55">
                

                <div>
                    <div class="login-and-register-form-inputs">
                        <input asp-for="PropertyName" required class="form-control w-100 shadow-sm" id="PropertyName" placeholder="Property Name">
                        <label>
                            <span style="transition-delay:0ms">P</span>
                            <span style="transition-delay:50ms">r</span>
                            <span style="transition-delay:100ms">o</span>
                            <span style="transition-delay:150ms">p</span>
                            <span style="transition-delay:200ms">e</span>
                            <span style="transition-delay:250ms">r</span>
                            <span style="transition-delay:300ms">t</span>
                            <span style="transition-delay:350ms">y</span>
                            <span style="transition-delay:400ms"></span>
                            <span style="transition-delay:400ms">N</span>
                            <span style="transition-delay:450ms">a</span>
                            <span style="transition-delay:500ms">m</span>
                            <span style="transition-delay:550ms">e</span>
                        </label>
                    </div>
                    <span class="d-flex justify-content-start">
                        <span asp-validation-for="PropertyName" class="text-danger"></span>
                    </span>
                </div>

                <!-- Location -->
                <div>
                    <div class="login-and-register-form-inputs">
                        <input asp-for="Location" required class="form-control w-100 shadow-sm" id="Location" placeholder="Location">
                        <label>
                            <span style="transition-delay:0ms">L</span>
                            <span style="transition-delay:50ms">o</span>
                            <span style="transition-delay:100ms">c</span>
                            <span style="transition-delay:150ms">a</span>
                            <span style="transition-delay:200ms">t</span>
                            <span style="transition-delay:250ms">i</span>
                            <span style="transition-delay:300ms">o</span>
                            <span style="transition-delay:350ms">n</span>
                        </label>
                    </div>
                    <span class="d-flex justify-content-start">
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </span>
                </div>

                <!-- Price -->
                <div>
                    <div class="login-and-register-form-inputs">
                        <input asp-for="Price" required class="form-control w-100 shadow-sm" id="Price" placeholder="Price">
                        <label>
                            <span style="transition-delay:0ms">P</span>
                            <span style="transition-delay:50ms">r</span>
                            <span style="transition-delay:100ms">i</span>
                            <span style="transition-delay:150ms">c</span>
                            <span style="transition-delay:200ms">e</span>
                        </label>
                    </div>
                    <span class="d-flex justify-content-start">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </span>
                </div>
            </div>

            <!-- Upload Images -->
            <div class="form-group">
                <label for="images">Upload Images</label>
                <input type="file" name="images" id="images" class="form-control-file" multiple>
            </div>
